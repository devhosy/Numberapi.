<script>
  // CONFIG: change this to your real lookup endpoint (GET ?number=)
  const API_URL = "https://api.example.com/lookup"; // <-- replace with your API
  const USE_REAL_API = false; // set true after changing API_URL and enabling CORS/auth

  const lookupBtn = document.getElementById('lookup');
  const numInput = document.getElementById('num');
  const resName = document.getElementById('res-name');
  const resNumber = document.getElementById('res-number');
  const resCarrier = document.getElementById('res-carrier');
  const resLocation = document.getElementById('res-location');
  const resType = document.getElementById('res-type');
  const apiInfo = document.getElementById('api-info');

  if (!USE_REAL_API) apiInfo.textContent = "Using mock data ‚Äî open script to set API_URL and toggle USE_REAL_API";
  else apiInfo.textContent = "Using: " + API_URL;

  lookupBtn.addEventListener('click', doLookup);
  numInput.addEventListener('keydown', (e)=>{ if(e.key === 'Enter') doLookup(); });

  async function doLookup(){
    const number = (numInput.value||'').trim();
    if(!number){ alert('Enter phone number'); return; }

    // show loading state
    resName.textContent = 'Loading...'; resNumber.textContent = '‚Äî';
    resCarrier.innerHTML = '‚Äî'; resLocation.textContent = '‚Äî'; resType.textContent = '‚Äî';

    try{
      let data;
      if(USE_REAL_API){
        const res = await fetch(API_URL + '?number=' + encodeURIComponent(number));
        if(!res.ok) throw new Error('API error ' + res.status);
        data = await res.json();
      } else {
        // MOCK response (replace with real API)
        await new Promise(r=>setTimeout(r, 700)); // simulate latency
        data = {
          name: "‡¶Æ‡¶æ‡¶á‡¶∞‡ßÅ‡¶≤ ‡¶ü‡¶æ‡¶≤‡¶ø ‡¶Ö‡¶´‡¶ø‡¶∏ Fn",
          number: number,
          carrier: "Grameenphone (017)",
          location: "Bangladesh",
          type: "Mobile"
        };
      }

      // adapt to different API shapes:
      const name = data.name || data.owner || "Unknown";
      const carrier = data.carrier || (data.network && data.network.name) || "Unknown";
      const location = data.location || data.country || "Unknown";
      const type = data.type || data.phone_type || "Unknown";

      resName.textContent = name;
      resNumber.textContent = number;
      resCarrier.innerHTML = `<span class="carrier-badge">${carrier}</span>`;
      resLocation.textContent = location;
      resType.textContent = type;

    }catch(err){
      console.error(err);
      resName.textContent = 'Error';
      resNumber.textContent = number;
      resCarrier.textContent = '‚Äî';
      resLocation.textContent = '‚Äî';
      resType.textContent = '‚Äî';
      alert('Lookup failed: ' + (err.message || err));
    }
  }

  // copy & whatsapp
  document.getElementById('copyBtn').addEventListener('click', async ()=>{
    const text = `${resName.textContent}\n${resNumber.textContent}\nCarrier: ${resCarrier.innerText}\nLocation: ${resLocation.textContent}`;
    try{
      await navigator.clipboard.writeText(text);
      alert('Copied to clipboard');
    }catch(e){
      prompt('Copy this:', text);
    }
  });

  document.getElementById('whBtn').addEventListener('click', ()=>{
    const phone = resNumber.textContent.replace(/\D/g,'');
    if(!phone || phone === '‚Äî'){ alert('No number to open'); return; }
    const msg = encodeURIComponent(`Hello, I checked this number: ${resNumber.textContent}\nName: ${resName.textContent}`);
    const waUrl = `https://wa.me/${phone}?text=${msg}`;
    window.open(waUrl, '_blank');
  });

  // initial auto lookup (optional)
  // doLookup();

</script>
